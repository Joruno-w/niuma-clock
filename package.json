{
  "name": "niuma-clock",
  "version": "1.0.0",
  "description": "跨平台的牛马时钟（Electron）",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ ELECTRON_BUILDER_BINARIES_MIRROR=https://npmmirror.com/mirrors/electron-builder-binaries/ npm_config_electron_mirror=https://npmmirror.com/mirrors/electron/ electron-builder",
    "build:mac": "npm run build --mac",
    "build:win": "npm run build --win",
    "build:linux": "npm run build --linux"
  },
  "keywords": [
    "electron",
    "timer",
    "salary",
    "clock"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "29.4.0",
    "electron-builder": "24.13.3"
  },
  "build": {
    "appId": "com.example.niuma.clock",
    "productName": "牛马时钟",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "assets/**",
      "package.json"
    ],
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "zip"
      ]
    }
  }
}
